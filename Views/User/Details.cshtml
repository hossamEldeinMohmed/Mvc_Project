@model Mvc_Project.Models.ViewModels.UserProfileViewModel

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-light text-white">
            <h3 class="mb-0" style="color:black">User Profile</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 text-center">
                    <div class="profile-image mb-3">
                        @{
                            var profileImageUrl = string.IsNullOrEmpty(Model.ProfileImageUrl)
                            ? "~/images/default-profile.png"
                            : "~/images/" + Model.ProfileImageUrl;
                        }

                        <img src="@Url.Content(profileImageUrl)"
                             alt="Profile Image"
                             class="img-fluid rounded-circle border"
                             style="width: 150px; height: 150px;" />
                    </div>
                </div>
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4">Username</dt>
                        <dd class="col-sm-8">@Model.UserName</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Phone Number</dt>
                        <dd class="col-sm-8">@Model.PhoneNumber</dd>

                        <dt class="col-sm-4">Email Verified</dt>
                        <dd class="col-sm-8">
                            <span class="badge @((Model.EmailVerified) ? "bg-success" : "bg-danger")">
                                @(Model.EmailVerified ? "Yes" : "No")
                            </span>
                        </dd>

                        <dt class="col-sm-4">Created At</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("MMMM dd, yyyy")</dd>


                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">Edit Profile</a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
        </div>
    </div>
</div>
