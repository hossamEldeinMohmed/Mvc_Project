
@model List<Category>

@{
    ViewData["Title"] = "Category Management";
    Layout = "_AdminDashBordLayout";
}

<h2>Manage Categories</h2>

<div class="row">
   
    <div class="col-md-8">
        <h3>Existing Categories</h3>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Category ID</th>
                    <th>Category Name</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td>@category.Name</td>
                        <td>@category.Description</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

   
