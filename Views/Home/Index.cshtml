@model List<Product>
@{
    ViewData["Title"] = "Home Page";
    Layout = "_AddLayout";
}

<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-4">
                <div class="section-title">
                    <h4>New product</h4>
                </div>
            </div>
            <div class="col-lg-8 col-md-8">
                <ul class="filter__controls">
                    <li class="active" data-filter="*">All</li>
                    <li data-filter=".women">Women’s</li>
                    <li data-filter=".men">Men’s</li>
                    <li data-filter=".kid">Kid’s</li>
                    <li data-filter=".accessories">Accessories</li>
                    <li data-filter=".cosmetic">Cosmetics</li>
                </ul>
            </div>
        </div>
        <div class="row property__gallery" id="MixItUpBA81B2">
            @if (Model == null || !Model.Any())
            {
                <p>No products found.</p>
            }
            else
            {
                foreach (var product in Model)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 mix women">
                        <div class="product__item">
                            <div class="product__item__pic">
                              
                                @foreach (var imageUrl in product.ProductImges)
                                {

                                    <img src="@Url.Content("~/images/" + imageUrl)" alt="@product.Name" />
                                }
                            </div>
                            <div class="product__item__text">
                                <h6><a href="#">@product.Name</a></h6>
                                <div class="rating">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                </div>
                                <div class="product__price">@product.Price.ToString("C")</div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
        <div style="display:flex; justify-content:center; justify-items:center; text-align:center" class="col-lg-12 text-center">
            <div class="pagination__option">
                <a href="#">1</a>
                <a href="#">2</a>
                <a href="#">3</a>
                <a href="#"><i class="fa fa-angle-right"></i></a>
            </div>
        </div>
    </div>
</section>