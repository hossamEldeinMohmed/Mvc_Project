@model List<Product>
@{
    ViewData["Title"] = "Products";
    Layout = "_AddLayout";
}

<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f4f6f9;
    }

    h1 {
        font-size: 2.5rem;
        font-weight: 700;
        color: #343a40;
        margin-bottom: 1.5rem;
    }

    .btn-primary, .btn-info, .btn-warning, .btn-danger, .btn-dark {
        border-radius: 0.25rem;
        font-size: 1rem;
    }

        .btn-primary:hover, .btn-info:hover, .btn-warning:hover, .btn-danger:hover, .btn-dark:hover {
            opacity: 0.8;
        }

    .table th, .table td {
        vertical-align: middle;
        font-size: 1.125rem;
    }

    .table thead th {
        border-bottom: 2px solid #dee2e6;
    }

    .table tbody tr:hover {
        background-color: #f1f3f5;
    }

    .table-actions .btn {
        margin-right: 0.5rem;
    }

    .search-form {
        max-width: 400px;
        margin-bottom: 1.5rem;
    }

        .search-form input[type="search"] {
            border-radius: 0.25rem 0 0 0.25rem;
            border-right: 0;
        }

        .search-form button {
            border-radius: 0 0.25rem 0.25rem 0;
        }

    .add-product-link {
        text-align: center;
        display: flex;
        justify-content: center;
        margin-bottom: 1.5rem;
    }
</style>

<h1>Product Index</h1>

<div class="add-product-link">
    <a asp-action="Add" class="btn btn-primary">Add New Product</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Category.Name</td>
                <td>@product.Price.ToString("C")</td>
                <td class="table-actions">
                    <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>