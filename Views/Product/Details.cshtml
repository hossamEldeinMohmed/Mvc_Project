@model Mvc_Project.Models.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Product Details";
    Layout = "_AddLayout";
}

<div class="container">
    <h1 class="text mb-4">Product Details</h1>

    <div class="product-details">
        <div class="form-group mb-3">
            <label class="form-label">Name</label>
            <p class="form-control-plaintext">@Model.Name</p>
        </div>

        <div class="form-group mb-3">
            <label class="form-label">Description</label>
            <p class="form-control-plaintext">@Model.Description</p>
        </div>

        <div class="form-group mb-3">
            <label class="form-label">Category</label>
            <p class="form-control-plaintext">@Model.CategoryName</p>
        </div>

        <div class="form-group mb-3">
            <label class="form-label">Price</label>
            <p class="form-control-plaintext">@Model.Price.ToString("C")</p>
        </div>

        @if (Model.ProductImages != null && Model.ProductImages.Any())
        {
            <div class="form-group mb-3">
                <label class="form-label">Images</label>
                <div class="product-images">
                    @foreach (var image in Model.ProductImages)
                    {
                        <img src="@Url.Content("~/images/" + image)" alt="Product Image" class="img-fluid" style="max-width: 200px; margin-right: 10px;" />
                    }
                </div>
            </div>
        }

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
