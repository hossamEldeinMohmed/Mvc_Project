@model Mvc_Project.Models.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Add Product";
    Layout = "_AddLayout";
}

<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f4f6f9;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
    }

    h1 {
        font-size: 2.5rem;
        font-weight: 700;
        color: #343a40;
        margin-bottom: 1.5rem;
    }

    .product-form {
        background-color: #ffffff;
        border: 1px solid #dee2e6;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        border-radius: 0.5rem;
    }

    .form-label {
        font-size: 1.1rem;
        color: #495057;
        font-weight: 500;
    }

    .form-control, .form-select {
        border-radius: 0.25rem;
    }

    .form-control-lg {
        font-size: 1.125rem;
        padding: 0.75rem 1.25rem;
        border: 1px solid #ced4da;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #004085;
    }

   

    .btn-secondary:hover {
        background-color: #5a6268;
        border-color: #545b62;
    }

    .text-danger {
        font-size: 0.875rem;
        color: #dc3545;
    }

    .mb-4 {
        margin-bottom: 1.5rem;
    }

    .mb-3 {
        margin-bottom: 1.5rem;
    }

    .mt-3 {
        margin-top: 1rem;
    }

    .border {
        border-color: gray !important;
    }
</style>

<div class="container">
    <h1 class="text mb-4">Add Your Product</h1>

    <form asp-action="Add" method="post" class="product-form" enctype="multipart/form-data">
        <div class="form-group mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control form-control-lg border" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control form-control-lg border" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="CategoryId" class="form-label"></label>
            <select asp-for="CategoryId" asp-items="Model.CategoryList" class="form-select form-select-lg border">
                <option value="">Select a category</option>
            </select>

            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" class="form-control form-control-lg border" type="number" step="0.01" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="ProductImges" class="form-label">Product Images</label>
            <input type="file" id="ProductImges" name="ProductImges" class="form-control" multiple />
            <span asp-validation-for="ProductImages" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <input type="submit" value="Add Product" class="btn site-btn btn-lg w-100" />
        </div>
    </form>

    <a asp-action="Index" class="btn site-btn mt-3">Back to List</a>
</div>
