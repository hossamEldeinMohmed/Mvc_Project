@model List<Product>
@{
    ViewData["Title"] = "Add Product";
    Layout = "_CategoriesLayout";
}
<section b-2hssyqf3jy="" class="product spad">
    <div b-2hssyqf3jy="" class="container">
        <div b-2hssyqf3jy="" class="row">
            <div b-2hssyqf3jy="" class="col-lg-4 col-md-4">
                <div b-2hssyqf3jy="" class="section-title">
                    <h4 b-2hssyqf3jy="">Dresses</h4>
                </div>
            </div>
            <div b-2hssyqf3jy="" class="col-lg-8 col-md-8">
                <ul class="filter__controls">
                    <li data-filter="*"><a asp-controller="Home" asp-action="Index">All</a></li>
                    <li class="active" data-filter=".women"><a asp-controller="Category" asp-action="Dresses">Dresses</a></li>
                    <li data-filter=".men"><a asp-controller="Category" asp-action="Tops">Tops</a></li>
                    <li data-filter=".kid"><a asp-controller="Category" asp-action="Bottoms">Bottoms</a></li>
                    <li data-filter=".accessories"><a asp-controller="Category" asp-action="Shoes">Shoes</a></li>
                    <li data-filter=".cosmetic"><a asp-controller="Category" asp-action="AccessoriesAndMakeUp">Accessories & MakeUp</a></li>
                </ul>
            </div>
        </div>
        <div class="row property__gallery" id="MixItUpBA81B2">
            @if (Model == null || !Model.Any())
            {
                <p>No products found.</p>
            }
            else
            {

                foreach (var product in Model)
                {
                    @if (product.CategoryId == 1)
                    {
                        <div class="col-lg-3 col-md-4 col-sm-6 mix women">
                            <div class="product__item">
                                <div class="product__item__pic">

                                    @foreach (var imageUrl in product.ProductImges)
                                    {

                                        <img src="@Url.Content("~/images/" + imageUrl)" alt="@product.Name" />
                                    }
                                </div>
                                <div class="product__item__text">
                                    <h6><a href="#">@product.Name</a></h6>
                                    <div class="rating">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                    </div>
                                    <div class="product__price">@product.Price.ToString("C")</div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <p>No products found in this Category.</p>
                    }
                }
            }
        </div>
        <div style="display:flex; justify-content:center; justify-items:center; text-align:center" class="col-lg-12 text-center">
            <div class="pagination__option">
                <a href="#">1</a>
                <a href="#">2</a>
                <a href="#">3</a>
                <a href="#"><i class="fa fa-angle-right"></i></a>
            </div>
        </div>
    </div>
</section>