
@model List<Product>
@{
    ViewData["Title"] = "Add Product";
    Layout = "_CategoriesLayout";
}
<style>
    .section-title h4:after {
        width: 320px;
    }
</style>
<section b-2hssyqf3jy="" class="product spad">
    <div b-2hssyqf3jy="" class="container">
        <div b-2hssyqf3jy="" class="row">
            <div b-2hssyqf3jy="" class="col-lg-4 col-md-4">
                <div b-2hssyqf3jy="" class="section-title">
                    <h4 b-2hssyqf3jy="">Accessories & MakeUp</h4>
                </div>
            </div>
            <div b-2hssyqf3jy="" class="col-lg-8 col-md-8">
                <ul class="filter__controls">
                    <li data-filter="*"><a style="color:black;" asp-controller="Home" asp-action="Index">All</a></li>
                    <li data-filter=".women"><a style="color:black;" asp-controller="Category" asp-action="Dresses">Dresses</a></li>
                    <li data-filter=".men"><a style="color:black;" asp-controller="Category" asp-action="Tops">Tops</a></li>
                    <li data-filter=".kid"><a style="color:black;" asp-controller="Category" asp-action="Bottoms">Bottoms</a></li>
                    <li data-filter=".accessories"><a style="color:black;" asp-controller="Category" asp-action="Shoes">Shoes</a></li>
                    <li class="active" data-filter=".cosmetic"><a style="color:black;" asp-controller="Category" asp-action="AccessoriesAndMakeUp">Accessories & MakeUp</a></li>
                </ul>
            </div>
        </div>
        <div class="row property__gallery" id="MixItUpBA81B2">
            @if (Model == null || !Model.Any() )
            {
                <p>No products found.</p>
            }
            else
            {
                
                foreach (var product in Model)
                {
                    @if (product.CategoryId == 5)
                    {
                    <div class="col-lg-3 col-md-4 col-sm-6 mix women">
                        <div class="product__item">
                            <div class="product__item__pic">

                                @foreach (var imageUrl in product.ProductImges)
                                {
                                     <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id">
                                     
                                        <img style="height:360px;" src="@Url.Content("~/images/" + imageUrl)" alt="@product.Name" />
                               </a>
                                }
                            </div>
                            <div class="product__item__text">
                                <h6><a href="#">@product.Name</a></h6>
                                
                                <div class="product__price">@product.Price.ToString("C")</div>
                            </div>
                        </div>
                        </div>
                    }
                    else
                    {
                        <p>No products found in this Category.</p>
                    }
                }
            }
        </div>
        @* <div style="display:flex; justify-content:center; justify-items:center; text-align:center" class="col-lg-12 text-center">
            <div class="pagination__option">
                <a href="#">1</a>
                <a href="#">2</a>
                <a href="#">3</a>
                <a href="#"><i class="fa fa-angle-right"></i></a>
            </div>
        </div> *@
    </div>
</section>